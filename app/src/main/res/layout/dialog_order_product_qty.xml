<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativelayoutdailogmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_background">



    <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/roboto_bold"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="PRODUCT QUANTITY"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" android:layout_marginLeft="10dp"/>


    <RelativeLayout
            android:id="@+id/relativeLayout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/textview1">

        <TextView
                android:id="@+id/textview_product_qty_productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:fontFamily="@font/roboto"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Quantity"
                android:layout_below="@+id/textview_product_qty_productname"
                app:fontFamily="@font/roboto_light"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:id="@+id/editText_product_qty"
                android:layout_marginLeft="20dp" />

    </RelativeLayout>






    <Button
            android:text="ADD"
            android:background="@drawable/button_state_list_animator"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/relativeLayout_1"
            app:fontFamily="@font/roboto_light"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/button_product_qty"/>



</RelativeLayout>



