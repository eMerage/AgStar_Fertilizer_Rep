<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:id="@+id/card_view"
                                   style="@style/CardViewStyle"

                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentTop="true"
                                   android:layout_centerVertical="true"
                                   android:layout_marginLeft="5dp"
                                   android:layout_marginRight="5dp"
                                   android:layout_marginTop="10dp">

    <RelativeLayout
            android:id="@+id/relativeLayout_header_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp">


        <RelativeLayout
                android:id="@+id/relativeLayout_visits_poducts"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/relativeLayout_order"
                android:layout_marginTop="15dp"
                android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_products"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/listview_products"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_marginLeft="5dp"/>
        </RelativeLayout>


        <TextView
                android:id="@+id/textview_visitcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout_date"
                android:layout_marginLeft="120dp"
                app:fontFamily="@font/roboto_light"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:visibility="visible"/>


        <TextView
                android:id="@+id/textview_dealer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/roboto_light"
                android:layout_alignStart="@+id/textview_visitcode"
                android:layout_alignLeft="@+id/textview_visitcode"
                android:layout_alignTop="@+id/montserratRegular5"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
               android:textSize="15sp"
                android:visibility="visible"/>





        <TextView
                android:id="@+id/textview_dealer_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/roboto_light"
                android:layout_alignStart="@+id/textview_visitcode"
                android:layout_alignLeft="@+id/textview_visitcode"
                android:layout_alignTop="@+id/montserratRegular51"
                android:maxLines="1"
                android:text="Dealer Code  "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:visibility="visible"/>



        <TextView
                android:id="@+id/montserratRegular51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/montserratRegular5"
                android:layout_alignStart="@+id/montserratRegular5"
                android:layout_alignLeft="@+id/montserratRegular5"
                android:layout_marginTop="5dp"
                app:fontFamily="@font/roboto_bold"
                android:text="Dealer Code  "
                android:textColor="@color/colorPrimaryDark"
               android:textSize="15sp"
                android:visibility="visible"/>


        <TextView
                android:id="@+id/montserratRegular3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout_date"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                app:fontFamily="@font/roboto_bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Visit Code  "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:visibility="visible"/>


        <TextView
                android:id="@+id/montserratRegular5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/montserratRegular3"
                android:layout_alignStart="@+id/montserratRegular3"
                android:layout_alignLeft="@+id/montserratRegular3"
                android:layout_marginTop="5dp"
                app:fontFamily="@font/roboto_bold"
                android:text="Dealer  "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:visibility="visible"/>


        <RelativeLayout
                android:id="@+id/relativeLayout_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/montserratRegular51">

            <TextView
                    android:id="@+id/montserratRegular8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/roboto_bold"
                    android:text="Order Code  "
                    android:textColor="@color/colorPrimaryDark"
                   android:textSize="15sp"
                    android:visibility="visible"/>
            <TextView
                    android:id="@+id/textview_ordercode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/roboto_light"
                    android:layout_marginLeft="115dp"
                    android:text="Dealer Code  "
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                   android:textSize="15sp"
                    android:visibility="visible"/>


            <TextView
                    android:id="@+id/montserratRegular9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/montserratRegular8"
                    android:layout_alignStart="@+id/montserratRegular8"
                    android:layout_alignLeft="@+id/montserratRegular8"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/roboto_bold"
                    android:text="Dispatch Date  "
                    android:textColor="@color/colorPrimaryDark"
                   android:textSize="15sp"
                    android:visibility="visible"/>


            <TextView
                    android:id="@+id/textview_dispatchdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/roboto_light"
                    android:layout_alignStart="@+id/textview_ordercode"
                    android:layout_alignLeft="@+id/textview_ordercode"
                    android:layout_alignTop="@+id/montserratRegular9"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                   android:textSize="15sp"
                    android:visibility="visible"/>


            <TextView
                    android:id="@+id/montserratRegular10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/montserratRegular9"
                    android:layout_alignStart="@+id/montserratRegular9"
                    android:layout_alignLeft="@+id/montserratRegular9"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/roboto_bold"
                    android:text="Dispatch Type  "
                    android:textColor="@color/colorPrimaryDark"
                   android:textSize="15sp"
                    android:visibility="visible"/>


            <TextView
                    android:id="@+id/textview_dispatchtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/roboto_light"
                    android:layout_alignStart="@+id/textview_ordercode"
                    android:layout_alignLeft="@+id/textview_ordercode"
                    android:layout_alignTop="@+id/montserratRegular10"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                   android:textSize="15sp"
                    android:visibility="visible"/>


            <TextView
                    android:id="@+id/montserratRegular11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/montserratRegular10"
                    android:layout_alignStart="@+id/montserratRegular10"
                    android:layout_alignLeft="@+id/montserratRegular10"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/roboto_bold"
                    android:text="Payment Type  "
                    android:textColor="@color/colorPrimaryDark"
                   android:textSize="15sp"
                    android:visibility="visible"/>


            <TextView
                    android:id="@+id/textview_paymenttype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/roboto_light"
                    android:layout_alignStart="@+id/textview_ordercode"
                    android:layout_alignLeft="@+id/textview_ordercode"
                    android:layout_alignTop="@+id/montserratRegular11"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"/>

            <TextView
                    android:id="@+id/montserratRegular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/montserratRegular11"
                    android:layout_alignStart="@+id/montserratRegular11"
                    android:layout_alignLeft="@+id/montserratRegular11"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/roboto_bold"
                    android:text="Order Status  "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:visibility="visible"/>


            <TextView
                    android:id="@+id/textview_orderstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/roboto_thin"
                    android:layout_alignStart="@+id/textview_ordercode"
                    android:layout_alignLeft="@+id/textview_ordercode"
                    android:layout_alignTop="@+id/montserratRegular12"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"/>


        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/relativelayout_date"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@color/colorPrimaryDark">

            <TextView
                    android:id="@+id/textview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:fontFamily="@font/roboto"
                    android:textColor="#fff"
                    android:textSize="15sp"/>
        </RelativeLayout>




        <RelativeLayout
                android:id="@+id/relativelayout_time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/relativelayout_date"
                android:layout_toRightOf="@+id/relativelayout_date">

            <TextView
                    android:id="@+id/textview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:fontFamily="@font/roboto"
                    android:text="12:05:05"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"/>
        </RelativeLayout>



        <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toEndOf="@+id/relativelayout_time"
                android:layout_toRightOf="@+id/relativelayout_time">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_visits_porpus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:listitem="@layout/listview_purpose"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_marginLeft="5dp"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>


